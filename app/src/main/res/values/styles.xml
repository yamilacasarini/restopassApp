<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--        <item name="colorPrimary">@color/colorPrimary</item>-->
        <!--        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--        <item name="colorAccent">@color/colorAccent</item>-->
        <item name="android:statusBarColor">@color/backgroundGray</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>


    <style name="LoginButtton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:textSize">15sp</item>
        <item name="backgroundTint">@color/restoPassGreen</item>
    </style>

    <style name="EmailInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="startIconDrawable">@drawable/email_icon</item>
        <item name="android:hint">@string/userNameHint</item>
    </style>

    <style name="hintlessEmailInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="startIconDrawable">@drawable/email_icon</item>
    </style>

    <style name="PasswordInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="startIconDrawable">@drawable/password_icon</item>
        <item name="endIconMode">password_toggle</item>
        <item name="helperTextEnabled">true</item>
        <item name="counterEnabled">true</item>
        <item name="counterTextAppearance">?attr/textAppearanceSubtitle2</item>
        <item name="counterMaxLength">8</item>
        <item name="helperTextTextAppearance">?attr/textAppearanceSubtitle2</item>
        <item name="helperText">@string/passwordHelp</item>
    </style>

    <style name="FirstNameInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:hint">@string/firstNameHint</item>
    </style>

    <style name="LastNameInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:hint">@string/lastNameHint</item>
    </style>

    <style name="TextAppearance.Label" parent="TextAppearance.MaterialComponents.Body2">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="LabelSecondary">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="StarIcon">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:src">@drawable/ic_star</item>
        <item name="android:layout_marginEnd">3dp</item>
    </style>

    <style name="HalfStarIcon" parent="StarIcon">
        <item name="android:src">@drawable/ic_half_star</item>
    </style>

    <style name="star">
        <item name="srb_numberOfStars">5</item>
        <item name="srb_fillColor">@color/starYellow</item>
        <item name="srb_isIndicator">true</item>
        <item name="srb_stepSize">0.5</item>
        <item name="srb_starSize">20dp</item>
    </style>

    <!-- Settings Fragment -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/dividerVertical</item>
    </style>

    <style name="TextAppearance.Category" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="logoutButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textSize">15sp</item>
        <item name="android:text">@string/logout</item>
    </style>

    <!-- Membership Fragment -->
    <style name="membershipCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:layout_marginVertical">16dp</item>
    </style>

    <style name="tag">
        <item name="android:background">@drawable/price_round_corner</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="tagListItem" parent="tag">
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="tagLastListItem" parent="tag">
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="priceTag" parent="tag">
        <item name="android:backgroundTint">@color/restoPassGreen</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
    </style>

    <style name="priceTagDark" parent="priceTag">
        <item name="android:backgroundTint">@color/darkGray</item>
    </style>

    <style name="availableTag" parent="tag">
        <item name="android:backgroundTint">@color/restoPassGreen</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
    </style>

    <style name="notAvailableTag" parent="tag">
        <item name="android:backgroundTint">@color/darkGray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
    </style>

    <style name="membershipTitle">
        <item name="android:textSize">22sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="membershipImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:contentDescription">@string/membership_image_description</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="membershipDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="membershipDetails">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="membershipDetailsLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.Label</item>
    </style>

    <style name="membershipDetailsAmount">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.Label</item>
        <item name="android:textSize">30sp</item>
    </style>

    <!-- Alert Dialog -->
    <style name="alertTitle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="alertMessage">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="progressBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:progressBarStyle">?android:attr/progressBarStyleLarge</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- Refresh Error -->
    <style name="refreshButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:textSize">15sp</item>
        <item name="backgroundTint">@color/restoPassGreen</item>
    </style>

    <style name="checkbox">
        <item name="checkboxStyle">@style/Widget.MaterialComponents.CompoundButton.CheckBox</item>
    </style>


    <!-- Home Fragment -->
    <style name="restaurantVerticalCard">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">300dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="restaurantVerticalLastCard" parent="restaurantVerticalCard">
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="dishVerticalCard">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">340dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="dishVerticalLastCard" parent="dishVerticalCard">
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="membershipVerticalCard">
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="membershipVerticalLastCard" parent="membershipVerticalCard">
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="aboutButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/rubik_bold</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/aboutButtonTextSize</item>
    </style>

    <style name="aboutButtonEmoji">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textSize">@dimen/aboutButtonTextSize</item>
    </style>


    <style name="greetingEmoji">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="backButtonToolbar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:src">@drawable/ic_arrow_back_white</item>
    </style>

    <!-- Payment Fragment -->
    <style name="paymentInputText">
        <item name="android:paddingTop">22dp</item>
        <item name="android:textSize">36sp</item>
    </style>


    <!-- Communications Fragment -->
    <style name="communicationsDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="lineHeight">24dp</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <!-- Personal Info Fragment -->
    <style name="savePersonalInfoButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:textSize">15sp</item>
        <item name="backgroundTint">@color/restoPassGreen</item>
    </style>

</resources>
